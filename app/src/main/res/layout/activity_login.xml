<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Login"
    android:background="#469df6">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/adaelogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        />
    <TextView
        android:id="@+id/adae"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="adae"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/logo"/>
    <TextView
        android:id="@+id/companion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Companion App"
        android:textSize="24sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_below="@id/adae"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/login"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/signinbackground"
        android:layout_below="@id/companion"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:hint="Email"
        android:textColorHint="#9B9B9B"
        android:gravity="center"
        android:textColor="#4A4A4A"
        android:singleLine="true"/>
    <EditText
        android:id="@+id/password"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/signinbackground"
        android:layout_below="@id/login"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:hint="Password"
        android:password="true"
        android:textColorHint="#9B9B9B"
        android:gravity="center"
        android:textColor="#4A4A4A"
        android:singleLine="true"
        android:inputType="textPassword"/>
    <Button
        android:id="@+id/loginbutton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="#147af1"
        android:layout_below="@id/password"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Log In"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:clickable="true"
        android:onClick="toQr"/>
    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginbutton"
        android:layout_alignStart="@id/password"
        android:layout_alignLeft="@id/password"
        android:layout_marginTop="10sp"
        android:text="By Logging in I agree to Adae's"
        android:textColor="#4A4A4A"
        android:textSize="17sp"/>
    <TextView
        android:id="@+id/privacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:layout_alignStart="@id/text1"
        android:layout_alignLeft="@id/text1"
        android:text="@string/privacy"
        android:textSize="17sp"
        android:textColor="#4a4d66"
        />
    <TextView
        android:id="@+id/and"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" and "
        android:textSize="17sp"
        android:layout_below="@id/text1"
        android:layout_toRightOf="@id/privacy"
        android:textColor="#4A4A4A"/>
    <TextView
        android:id="@+id/terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:layout_toRightOf="@id/and"
        android:text="@string/terms"
        android:textSize="17sp"/>
</RelativeLayout>
