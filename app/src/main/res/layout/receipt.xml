<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.adae.justinelee.adaecompanion.Receipt">

    <RelativeLayout
        android:id="@+id/tool"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/backarrow"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/back"
            android:layout_marginLeft="10dp"
            android:onClick="toTransactions"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Transactions"
            android:textSize="18sp"
            android:layout_toRightOf="@id/backarrow"
            android:layout_marginLeft="10dp"
            />
    </RelativeLayout>

    <View
        android:id="@+id/line10"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tool"
        android:background="#9B9B9B"/>


    <RelativeLayout
        android:layout_below="@id/line10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Winston would like to try"
        android:textSize="18sp"
        android:layout_marginTop="10dp"/>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9B9B9B"
        android:layout_below="@id/action"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/line1"
        android:layout_marginTop="10dp"
        android:textColor="#4A4A4A"
        android:text="AOSIDFOJI"
        android:gravity="center_vertical"/>
    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/description"
        android:background="#9B9B9B"/>
    <TextView
        android:id="@+id/trust"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trust Fee"
        android:textSize="18sp"
        android:layout_below="@id/line2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="70dp"/>

    <TextView
        android:id="@+id/fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$100"
        android:layout_below="@id/line2"
        android:textSize="18sp"
        android:layout_toRightOf="@id/trust"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="46dp"/>
    <View
        android:id="@+id/line45"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9B9B9B"
        android:layout_below="@id/trust"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total"
        android:layout_below="@id/line45"
        android:textSize="18sp"
        android:layout_alignLeft="@id/line2"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:textColor="#4A4A4A"/>
    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$100"
        android:textSize="18sp"
        android:layout_below="@id/line45"
        android:layout_toRightOf="@id/total"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="80dp"
        android:textColor="#4A4A4A"/>
    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_below="@id/total"
        android:layout_alignStart="@id/total"
        android:layout_alignLeft="@id/total"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/statusactual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/price"
        android:text="In-Progress"
        android:layout_alignStart="@id/price"
        android:layout_alignLeft="@id/price"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#419BF9"/>
    <TextView
        android:id="@+id/instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/status"
        android:layout_marginTop="20dp"
        android:textColor="#FF6678"
        android:textStyle="bold"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottomtool"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:id="@+id/Details"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/details_active"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/Qrcode"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/qr_code"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>




    </RelativeLayout>
    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/bottomtool"
        android:background="#9B9B9B"/>



</RelativeLayout>
